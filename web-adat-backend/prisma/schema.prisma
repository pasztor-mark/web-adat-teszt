generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String
  vehicles Vehicle[] @relation("VehicleBuyer")
  purchases Purchase[]
}

model Vehicle {
  id              Int       @id @default(autoincrement())
  make            String
  model           String
  year            Int
  startingPrice   Float
  auctionEndDate  DateTime
  vin             String    @unique
  horsepower      Int
  fuelConsumption Float
  sellerId        Int
  buyerId         Int?
  buyer           User?     @relation("VehicleBuyer", fields: [buyerId], references: [id])
  purchase        Purchase?

  @@index([sellerId])
}

model Purchase {
  id            Int       @id @default(autoincrement())
  buyerId       Int
  vehicleId     Int       @unique
  purchasePrice Float
  purchaseDate  DateTime  @default(now())
  buyer         User      @relation(fields: [buyerId], references: [id])
  vehicle       Vehicle   @relation(fields: [vehicleId], references: [id])
}
model PerformanceMetrics {
  id        Int @id @default(autoincrement())
  name        String 
  value       Float
  description String
}